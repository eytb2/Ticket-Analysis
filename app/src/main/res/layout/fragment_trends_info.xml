<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
   >

    <cn.lemon.ticketsystem.ui.TitleBarUtil
        android:layout_width="match_parent"
        android:id="@+id/mTitleBarUtil"
        android:background="#e20000"

        android:layout_height="50dp"></cn.lemon.ticketsystem.ui.TitleBarUtil>

    <ProgressBar


        android:id="@+id/progress_load"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_centerInParent="true"
        android:visibility="gone"/>


    <HorizontalScrollView
        android:layout_marginTop="@dimen/dp_10"
        android:layout_below="@+id/mTitleBarUtil"
        android:id="@+id/hs_container"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:scrollbars="none">
        <LinearLayout
            android:id="@+id/container_lotty_title"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="horizontal"/>
    </HorizontalScrollView>
    <ListView
        android:id="@+id/list_trendinfos"
        android:layout_below="@+id/hs_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

</RelativeLayout>